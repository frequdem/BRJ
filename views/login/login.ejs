<% include ../head.ejs %>
      <title>登录</title>
      <link rel='stylesheet' href='/stylesheets/login/login.css' />
      <script type="text/javascript" src="/javascripts/js/login/login.js"></script>
    </head>
    <body>
        <div class="main-area">
            <div class="logo-area">
                <p class="logo-title">别人家</p>   
                <div class="toggle-tab-area"><span class="signIn-tab active-tab">登录</span><span class="signUp-tab">注册</span></div>
