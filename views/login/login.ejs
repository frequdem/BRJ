                <div class="form-area signUp-area"><input type="text" name="username2" id="username2" placeholder="请输入邮箱" autocomplete="off"><input type="password" name="password2" id="password2" placeholder="密码" autocomplete="off"><input type="password" name="password" id="password21" placeholder="确认密码" autocomplete="off"></div>
                <button class="btn confirm" type="button">确定</button>
            </div>


        </div>     
    </body>
</html>
    