<% include ../head.ejs %>
        <title>别人家-室内设计全景展示</title>
        <link rel='stylesheet' href='/stylesheets/list/list.css' />

    </head>
    <body>
        <% if (logStatus) {%>
            <% include ../myInfo.ejs %> 
        <% } %>     
        <div class="header"><a><span class="others">别人</span><span class="home-word">家</span></a>
            <span class="login-area">
                <% if(!logStatus) {%>
                    <i class="iconfont login-img unlogged">&#xe632;</i>  
                <% }else{%>
                    <i class="iconfont login-img logged">&#xe605;<span class="unReadMsgCnt"></span></i>  
                <%}%>
                <span class="split-img"></span>
            </span>
        </div>  
        
      <div class="content">
        <% if(list) { %>
        <ul>
            <% list.forEach(function(item) { %>
                <li  class="fy-item" data-id=<%=item._id.toString()%>>
                    <div class="fy-item-cover">
                        <img src="/resource/<%=item._id.toString()%>/cover.jpg" class="fy-item-img">
                    </div>                
                    <div class="fy-item-info clearfix">
                        <img class="fy-item-portrait" src="/resource/<%=item._id.toString()%>/portrait.jpg">                                       
                        <div class="fy-item-textinfo">
                            <p class="fy-item-name"><%=item.title%></p>
                            <p class="fy-item-detail"><i class="iconfont info-icon">&#xe602;</i><span><%=item.type%></span><i class="iconfont info-icon">&#xe682;</i><span>装修<%=item.dec_cost%>万</span><i class="iconfont info-icon">&#xe635;</i><span><%=item.province%> <%=item.county%></span></p>                           
                        </div>
                        <div class="watch-area">
                            <i class="iconfont watch-icon">&#xe7f7;</i><span class="icon-count"><%= item.watchs %></span>
                        </div>
                    </div>  
                </li>
            <% }) %>
        </ul>
        <% } %>
      </div>
      <script type="text/javascript">
          var logStatus = <%=logStatus%>;
      </script>
      <script type="text/javascript" src="/javascripts/js/list/list.js"></script>
    </body>
</html>
